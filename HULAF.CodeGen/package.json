{
    "name": "hulaf-codegen",
    "version": "0.0.0",
    "scripts": {
        "concat-persons-controller": "cd contract/person-controller/model/ && multi-file-swagger -o yaml ./controller.yaml > ../person-controller.yaml",
        "generate-persons-controller": "nswag run ./contract/person-controller/person-controller.json",
        "build-persons-controller": "npm-run-all concat-persons-controller generate-persons-controller",

        "concat-location-controller": "cd contract/location-controller/model/ && multi-file-swagger -o yaml ./controller.yaml > ../location-controller.yaml",
        "generate-location-controller": "nswag run ./contract/location-controller/location-controller.json",
        "build-location-controller": "npm-run-all concat-location-controller generate-location-controller",

        "build-hulaf-controllers": "npm-run-all build-persons-controller build-location-controller"
    },
    "dependencies": {
        "multi-file-swagger": "^2.2.0",
        "npm-run-all": "^4.1.5",
        "nswag": "^12.0.0"
    }
}