{
    "name": "hulaf-codegen",
    "version": "0.0.0",
    "scripts": {
        "gen-hulaf-test-controller": "nswag swagger2cscontroller /input:hulaf-contract.yaml /output:generated.cs",

        "concat-persons-controller": "cd contract/person-controller/model/ && multi-file-swagger -o yaml ./controller.yaml > ../person-controller.yaml",
        "generate-persons-controller": "nswag run ./contract/person-controller/person-controller.json",
     
        "build-hulaf-controllers": "npm-run-all concat-persons-controller generate-persons-controller"
    },
    "dependencies": {
        "multi-file-swagger": "^2.2.0",
        "npm-run-all": "^4.1.5",
        "nswag": "^12.0.0"
    }
}
